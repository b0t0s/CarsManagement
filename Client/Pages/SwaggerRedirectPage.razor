@page "/SwaggerRedirect"
@inject NavigationManager Navigation

<PageTitle>Redirecting...</PageTitle>

<div class="container text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
        <span class="sr-only"></span>
    </div>
    <div style="display: flex; width: 100%; height: 1rem;"></div>
    <h1 class="text-decoration-none ">Loading...</h1>
    <div style="display: flex; width: 100%; height: 1rem;"></div>
    <a class="mt-3" href="/swagger">Manually Redirect to Swagger</a>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var delay = Task.Delay(5000);
            await delay;
            Navigation.NavigateTo("/swagger", forceLoad: true);
        }
    }
}